<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Tickets</title>

  <link rel="stylesheet" href="/styles.css"> <!-- Optional: Include a stylesheet if needed -->
  <style>
    body {
    font-family: 'Bradley Hand', cursive;
    margin: 0;
    padding: 0;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #fdfdfd, #b2cfea);
    overflow: hidden;
}

.main-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 80%;
    max-width: 1100px;
    background: #fbfafa;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    border-radius: 20px;
    padding: 30px;
    text-align: center;
    position: relative;
    z-index: 1;
}

/* User Info Section */
h2 {
    font-size: 2rem;
    color: #2c3e50;
    margin-bottom: 15px;
}

p {
    font-size: 1.2rem;
    color: #34495e;
    margin-bottom: 10px;
}

/* Table Styling */
table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
    background: #fff;
    border-radius: 10px;
    overflow: hidden;
}

th, td {
    padding: 15px;
    text-align: left;
    border-bottom: 1px solid #ddd;
}

th {
    background: #bb3f3f;
    color: white;
}

td a {
    color: #bb3f3f;
    text-decoration: none;
    font-weight: bold;
}

td a:hover {
    text-decoration: underline;
}

/* No tickets found message */
.no-tickets {
    font-size: 1.2rem;
    color: #9c1e1e;
    margin-top: 20px;
}

/* Floating Background Animation */
.background-animation {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 0;
}

.background-animation img {
    position: absolute;
    width: 100px;
    animation: floatAnimation 10s linear infinite;
}

@keyframes floatAnimation {
    0% { transform: translateY(0px); }
    100% { transform: translateY(30px); }
}

/* Responsive */
@media (max-width: 900px) {
    .main-container {
        width: 90%;
        padding: 20px;
    }

    table {
        font-size: 0.9rem;
    }
}



</style>
</head>
<body>

      <h2>User Information</h2>
      <p><strong>Username:</strong> <%= user.username %></p>
    </section>

    <section class="section">
    <section>

      <h2>Tickets</h2>
      <% if (user.ticket && user.ticket.length > 0) { %>
        <table>
          <thead>
            <tr>
              <th>Seq</th>
              <th>Subject</th>

            </tr>
          </thead>
          <tbody>
            <% user.ticket.forEach((ticket, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><a href="/ticket/<%= ticket._id %>"> <%= ticket.Subject %></a></td>
              </tr>
            <% }) %>
          </tbody>

        </table>
      <% } else { %>
        <p>No tickets found for this user.</p>
      <% } %>
    </section>
  </div>

</body>
</html>
